<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/shallow_gray">

    <edu.bupt.ticketextraction.utils.customviews.MaxHeightScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:max_height="480dp">
        <!-- 最多同时显示6张  -->

        <LinearLayout
                android:id="@+id/sources_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        </LinearLayout>

    </edu.bupt.ticketextraction.utils.customviews.MaxHeightScrollView>

    <Button
            style="@style/normal_button_style"
            android:id="@+id/camera_shoot_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/shoot"
            android:textSize="25sp"/>

    <Button
            style="@style/normal_button_style"
            android:id="@+id/camera_record_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/record"
            android:textSize="25sp"/>

</RelativeLayout>