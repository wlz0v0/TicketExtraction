<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.bupt.ticketextraction">
    <uses-feature android:name="android.hardware.camera"
                  android:required="true"/>
    <uses-permission
            android:name="android.permission.WRITE_EXTERNAL_STORAGE"
            android:maxSdkVersion="28"
    />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.TicketExtraction"
            android:fullBackupContent="@xml/backup"
            android:requestLegacyExternalStorage="true">
        <activity
                android:name=".activity.MainActivity"
                android:alwaysRetainTaskState="true"
                android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SendToEmailActivity"/>
        <activity android:name=".activity.AboutUsActivity"/>
        <activity android:name=".activity.TeamActivity"/>
        <activity android:name=".activity.CreateWalletActivity"/>
        <activity android:name=".activity.WalletActivity"/>
        <activity android:name=".activity.InstructionActivity"/>
        <activity android:name=".activity.TicketActivity"/>
        <activity android:name=".activity.SetPasswordActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.PersonInfoActivity"/>
        <activity android:name=".activity.ContactActivity"/>
        <activity android:name=".activity.CreateContactActivity"/>
        <activity android:name=".activity.ChangeContactActivity"/>
        <provider android:authorities="edu.bupt.ticketextraction.FileProvider"
                  android:name="androidx.core.content.FileProvider"
                  android:exported="false"
                  android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS"
                       android:resource="@xml/file_paths"/>
        </provider>
    </application>
</manifest>